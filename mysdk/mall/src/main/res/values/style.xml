<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="round_progress">
        <item name="android:layout_width">32.0dip</item>
        <item name="android:layout_height">32.0dip</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">200</item>
        <item name="android:indeterminateDrawable">@drawable/round_progress</item>
    </style>



    <style name="order_info_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingTop">7dp</item>
    </style>

    <style name="order_info_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#828588</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="order_info_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#161616</item>
    </style>

    <style name="order_info_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_settle_btn</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>


</resources>