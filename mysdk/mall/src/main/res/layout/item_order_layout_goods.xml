<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.hengxin.mall.view.RoundImageView
        android:id="@+id/goods_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/slogan"
        app:cornerRadius="4dp"
        app:type="round" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="华为P40全网通至w尊版通至尊版通至尊版华为P40全网通至w尊版通至尊版通至尊版华为P40全网通至w尊版通至尊版通至尊版"
            android:textColor="@color/settle_text_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/goods_specify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="8+128g，五彩斑斓黑五彩斑斓黑五彩斑斓黑五彩斑斓黑五彩斑斓黑"
            android:textColor="@color/settle_text_gray"
            android:textSize="12sp"
            android:layout_alignParentBottom="true"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥32"
            android:layout_marginTop="9dp"
            android:textColor="@color/settle_text_black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/goods_count"
            android:layout_below="@+id/goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="x1"
            android:textColor="@color/settle_text_gray"
            android:textSize="13sp" />
    </RelativeLayout>

</LinearLayout>