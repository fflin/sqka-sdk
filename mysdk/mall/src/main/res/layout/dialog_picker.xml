<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_picker_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="请选择照片"
            android:textColor="@color/second_title_text"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/select_photo_line" />

        <TextView
            android:id="@+id/picker_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="18dp"
            android:text="相册"
            android:textColor="@color/select_photo_dialog"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/select_photo_line" />

        <TextView
            android:id="@+id/picker_take_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="18dp"
            android:text="拍照"
            android:textColor="@color/select_photo_dialog"
            android:textSize="16sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/picker_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/dialog_picker_background"
        android:gravity="center_horizontal"
        android:padding="18dp"
        android:text="取消"
        android:textColor="@color/select_photo_dialog"
        android:textSize="16sp" />

</LinearLayout>
