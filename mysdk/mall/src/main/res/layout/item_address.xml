<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="15dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginRight="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

            <TextView
                android:text="姓名"
                android:id="@+id/add_name"
                android:textSize="17sp"
                android:textColor="@color/settle_text_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

           <TextView
               android:text="电话"
               android:id="@+id/add_phone"
               android:layout_marginLeft="10dp"
               android:textSize="15sp"
               android:textColor="@color/detail_pop_88"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

           <ImageView
               android:id="@+id/add_tag1"
               android:layout_marginLeft="15dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:src="@drawable/add_default"/>

           <ImageView
               android:id="@+id/add_tag2"
               android:layout_marginLeft="15dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:src="@drawable/add_default"/>


       </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/add_info"
            android:textColor="@color/text_black_78"
            android:text="北京  北京市  通州区  北苑街道  新华新街58号院万达广场C座1919"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/add_edit"
        android:padding="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_bianji"/>
</RelativeLayout>