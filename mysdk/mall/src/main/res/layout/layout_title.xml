<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_parent"
    android:layout_width="match_parent"
    android:layout_height="48.0dip"
    android:background="@color/second_title_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/title_bar_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:scaleType="center"
        android:src="@drawable/ic_arrow_back_white_48dp"/>

    <TextView
        android:id="@+id/title_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:textColor="@color/second_title_text"
        android:textSize="17sp"/>

    <ImageView
        android:id="@+id/title_bar_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        android:scaleType="center"
        android:src="@drawable/ic_title_bar_edit_glass_white"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/title_bar_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        android:text="使用"
        android:textColor="@color/second_title_text"
        android:textSize="17sp"
        android:visibility="gone"/>

    <View
        android:id="@+id/title_hor_line"
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:layout_alignParentBottom="true"
        android:background="@color/second_title_line"/>


    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        android:src="@drawable/shop_more"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/iv_more"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:padding="10dp"
        android:src="@drawable/shop_share"
        android:visibility="gone"/>

</RelativeLayout>