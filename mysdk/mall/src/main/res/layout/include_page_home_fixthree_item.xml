<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/page_fix_three_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        fresco:fadeDuration="500"
        fresco:placeholderImage="@drawable/placeholder_square"
        fresco:placeholderImageScaleType="fitCenter" />

    <TextView
        android:id="@+id/item_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/bg_list_goods"
        android:gravity="center_horizontal"
        android:minWidth="40dp"
        android:text="1"
        android:textColor="#fff"
        android:textSize="13sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/page_fix_three_tv_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/page_fix_three_iv"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/page_fix_three_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/page_fix_three_tv_top"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:lines="1"
        android:paddingLeft="3dp"
        android:text="￥0"
        android:textColor="@color/red_theme"
        android:textSize="11.0sp" />

    <TextView
        android:id="@+id/page_fix_three_tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/page_fix_three_tv_top"
        android:layout_marginRight="3dp"
        android:layout_marginTop="1dp"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:paddingLeft="3.0dip"
        android:paddingRight="3.0dip"
        android:text="0万人已买"
        android:textColor="#b3b2b2"
        android:textSize="10sp" />
</RelativeLayout>