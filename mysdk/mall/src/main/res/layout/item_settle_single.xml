<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_settle_list_item"
    android:layout_marginBottom="5dp"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/settle_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_t_bao" />

        <TextView
            android:id="@+id/settle_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/settle_icon"
            android:text="淘宝"
            android:textColor="@color/settle_text_black"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@+id/settle_shop_name"
            android:src="@drawable/black_right_arrow" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/pop_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.hengxin.mall.view.RoundImageView
            android:id="@+id/pop_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:type="round"
            app:cornerRadius="4dp"
            android:src="@drawable/slogan" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/pop_img">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/settle_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="华为P40全网通至w尊版通至尊版通至尊版华为P40全网通至w尊版通至尊版通至尊版华为P40全网通至w尊版通至尊版通至尊版"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/settle_text_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/settle_specify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="8+128g，五彩斑斓黑五彩斑斓黑五彩斑斓黑五彩斑斓黑五彩斑斓黑"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/settle_text_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/settle_price"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:text="￥32"
                    android:textColor="@color/goods_detail_price_current"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/settle_tran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配送方式:"
            android:textColor="@color/settle_text_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/settle_tran_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/settle_tran"
            android:layout_marginLeft="10dp"
            android:text="快递、免运费"
            android:textColor="@color/settle_text_gray"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/tv_title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单备注:"
            android:textColor="@color/settle_text_black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/settle_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_title_1"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:hint="选填，按需填写"
            android:maxLines="1"
            android:textColor="@color/settle_text_gray"
            android:textSize="14sp" />
    </RelativeLayout>




</LinearLayout>