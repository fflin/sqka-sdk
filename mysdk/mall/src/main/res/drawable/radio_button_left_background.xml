<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/gradient_start" />
            <corners android:bottomLeftRadius="15dp" android:topLeftRadius="15dp" />
            <stroke android:width="1sp" android:color="@color/gradient_start"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke android:color="@color/gradient_start" android:width="1sp"/>
            <corners android:bottomLeftRadius="15dp" android:topLeftRadius="15dp" />
        </shape>
    </item>
</selector>
